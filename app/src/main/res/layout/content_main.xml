<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <Button
            android:id="@+id/list_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/list_style"/>

        <Button
            android:id="@+id/list_style_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/list_style_with_title"/>

        <Button
            android:id="@+id/list_style_icons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/list_style_with_icons"/>

        <Button
            android:id="@+id/grid_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/grid_style"/>

        <Button
            android:id="@+id/custom_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/custom_style"/>

        <Button
            android:id="@+id/custom_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/custom_view"/>

        <Button
            android:id="@+id/callback_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/callback"/>

        <Button
            android:id="@+id/dividers_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/with_dividers"/>

        <Button
            android:id="@+id/cell_height_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/custom_cell_height"/>

        <Button
            android:id="@+id/title_multiline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/multiline_title"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="6dp">

            <TextView
                android:id="@+id/dimmingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="14sp"/>

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"/>

            <Button
                android:id="@+id/window_dimming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/window_dimming"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>