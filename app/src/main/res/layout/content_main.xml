<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="36dp"
        android:paddingEnd="36dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <Button
            android:id="@+id/listStyleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ListStyle"/>

        <Button
            android:id="@+id/listStyleTitleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ListStyleWithTitle"/>

        <Button
            android:id="@+id/listStyleIconsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ListStyleWithIcons"/>

        <Button
            android:id="@+id/gridStyleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/GridStyle"/>

        <!--<Button
            android:id="@+id/custom_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/custom_style"/>-->

        <!--<Button
            android:id="@+id/custom_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/custom_view"/>-->

        <!--WindowDimming SeekView-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="6dp">

            <TextView
                android:id="@+id/dimmingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="14sp"/>

            <SeekBar
                android:id="@+id/dimmingSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"/>

        </LinearLayout>

        <!--CellHeight SeekView-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="6dp">

            <TextView
                android:id="@+id/cellHeightText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="14sp"/>

            <SeekBar
                android:id="@+id/heightSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"/>

        </LinearLayout>

        <!--Callback-->
        <CheckBox
            android:id="@+id/callbackCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Callback"/>

        <!--Dividers-->
        <CheckBox
            android:id="@+id/dividersCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Dividers"/>

        <!--FullWidth-->
        <CheckBox
            android:id="@+id/fullWidthCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/FullWidth"/>

        <!--Title Multiline-->
        <CheckBox
            android:id="@+id/multilineCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/TitleMultiline"/>

    </LinearLayout>

</ScrollView>